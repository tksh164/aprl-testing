{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string",
            "defaultValue": "vmadmin"
        },
        "adminPassword": {
            "type": "secureString"
        },
        "uniqueSuffixSeed": {
            "type": "string",
            "defaultValue": "[utcNow('yyyyMMddhhmmssfff')]",
            "metadata": {
                "description": "The default value is enough. No need to change the default value."
            }
        }
    },
    "variables": {

        // Common

        "prefix": "aprl-vm20",
        "location": "[resourceGroup().location]",
        "uniqueSuffix": "[concat('0', toLower(take(uniqueString(parameters('uniqueSuffixSeed')), 4)))]",

        // Log Analytics workspaces

        "logAnalyticsWorkspaceConfig": {
            "vmInsightsInstalled": {
                "name": "[format('{0}-vminsights-installed-{1}-log', variables('prefix'), variables('uniqueSuffix'))]"
            },
            "vmInsightsNotInstalled": {
                "name": "[format('{0}-vminsights-not-installed-{1}-log', variables('prefix'), variables('uniqueSuffix'))]"
            }
        },

        // Virtual network

        "virtualNetworkName": "[format('{0}-vnet', variables('prefix'))]",
        "subnetName": "default",

        // Configuration

        "config": [
            // Index: 0 - VM Insights full enabled with Azure Monitor agent
            {
                "vmName": "[format('{0}-1-ama-vminsights-enabled-full-{1}-vm', variables('prefix'), variables('uniqueSuffix'))]",
                "computerName": "[format('{0}-1', variables('prefix'))]",
                "shouldInstallAzureMonitorAgent": true,
                "shouldInstallLogAnalyticsAgent": false,
                "shouldInstallDependencyAgent": true,
                "dataCollectionRuleName": "[format('{0}-1-vminsights-full-dcr', variables('prefix'))]",
                "logAnalyticsWorkspaceName": "[variables('logAnalyticsWorkspaceConfig').vmInsightsNotInstalled.name]"
            },

            // Index: 1 - VM Insights performance only enabled with Azure Monitor agent
            {
                "vmName": "[format('{0}-2-ama-vminsights-enabled-perfonly-{1}-vm', variables('prefix'), variables('uniqueSuffix'))]",
                "computerName": "[format('{0}-2', variables('prefix'))]",
                "shouldInstallAzureMonitorAgent": true,
                "shouldInstallLogAnalyticsAgent": false,
                "shouldInstallDependencyAgent": false,
                "dataCollectionRuleName": "[format('{0}-2-vminsights-perfonly-dcr', variables('prefix'))]",
                "logAnalyticsWorkspaceName": "[variables('logAnalyticsWorkspaceConfig').vmInsightsNotInstalled.name]"
            },
            
            // Index: 2 - VM Insights disabled with Azure Monitor agent
            {
                "vmName": "[format('{0}-3-ama-vminsights-disabled-{1}-vm', variables('prefix'), variables('uniqueSuffix'))]",
                "computerName": "[format('{0}-3', variables('prefix'))]",
                "shouldInstallAzureMonitorAgent": true,
                "shouldInstallLogAnalyticsAgent": false,
                "shouldInstallDependencyAgent": false,
                "dataCollectionRuleName": "[format('{0}-3-vminsights-disabled-dcr', variables('prefix'))]",
                "logAnalyticsWorkspaceName": "[variables('logAnalyticsWorkspaceConfig').vmInsightsNotInstalled.name]"
            },

            // Index: 3 - VM Insights enabled with Log Analytics agent
            {
                "vmName": "[format('{0}-4-mma-vminsights-enabled-{1}-vm', variables('prefix'), variables('uniqueSuffix'))]",
                "computerName": "[format('{0}-4', variables('prefix'))]",
                "shouldInstallAzureMonitorAgent": false,
                "shouldInstallLogAnalyticsAgent": true,
                "shouldInstallDependencyAgent": true,
                "dataCollectionRuleName": null,
                "logAnalyticsWorkspaceName": "[variables('logAnalyticsWorkspaceConfig').vmInsightsInstalled.name]"
            },

            // Index: 4 - VM Insights disabled with Log Analytics agent
            {
                "vmName": "[format('{0}-5-mma-vminsights-disabled-{1}-vm', variables('prefix'), variables('uniqueSuffix'))]",
                "computerName": "[format('{0}-5', variables('prefix'))]",
                "shouldInstallAzureMonitorAgent": false,
                "shouldInstallLogAnalyticsAgent": true,
                "shouldInstallDependencyAgent": false,
                "dataCollectionRuleName": null,
                "logAnalyticsWorkspaceName": "[variables('logAnalyticsWorkspaceConfig').vmInsightsNotInstalled.name]"
            },

            // Index: 5 - No agents
            {
                "vmName": "[format('{0}-6-noagents-{1}-vm', variables('prefix'), variables('uniqueSuffix'))]",
                "computerName": "[format('{0}-6', variables('prefix'))]",
                "shouldInstallAzureMonitorAgent": false,
                "shouldInstallLogAnalyticsAgent": false,
                "shouldInstallDependencyAgent": false,
                "dataCollectionRuleName": null,
                "logAnalyticsWorkspaceName": "[variables('logAnalyticsWorkspaceConfig').vmInsightsNotInstalled.name]"
            }
        ],

        // Data collection rules

        "dataCollectionRule": {
            "vmInsightsFullEnabledWithAma": {
                "name": "[variables('config')[0].dataCollectionRuleName]",
                "vmName": "[variables('config')[0].vmName]",
                "logAnalyticsWorkspaceName": "[variables('config')[0].logAnalyticsWorkspaceName]"
            },
            "vmInsightsPerfOnlyEnabledWithAma": {
                "name": "[variables('config')[1].dataCollectionRuleName]",
                "vmName": "[variables('config')[1].vmName]",
                "logAnalyticsWorkspaceName": "[variables('config')[1].logAnalyticsWorkspaceName]"
            },
            "vmInsightsDisabledWithAma": {
                "name": "[variables('config')[2].dataCollectionRuleName]",
                "vmName": "[variables('config')[2].vmName]",
                "logAnalyticsWorkspaceName": "[variables('config')[2].logAnalyticsWorkspaceName]"
            }
        }
    },
    "resources": [
        //
        // Log Analytics workspace with VM Insights solution
        //

        {
            "name": "[variables('logAnalyticsWorkspaceConfig').vmInsightsInstalled.name]",
            "type": "Microsoft.OperationalInsights/workspaces",
            "apiVersion": "2021-12-01-preview",
            "location": "[variables('location')]",
            "properties": {
                "sku": {
                    "name": "pergb2018"
                }
            }
        },
        {
            "name": "[format('VMInsights({0})', variables('logAnalyticsWorkspaceConfig').vmInsightsInstalled.name)]",
            "type": "Microsoft.OperationsManagement/solutions",
            "apiVersion": "2015-11-01-preview",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceConfig').vmInsightsInstalled.name)]"
            ],
            "plan": {
                "publisher": "Microsoft",
                "product": "OMSGallery/VMInsights",
                "name": "[format('VMInsights({0})', variables('logAnalyticsWorkspaceConfig').vmInsightsInstalled.name)]",
                "promotionCode": ""
            },
            "properties": {
                "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceConfig').vmInsightsInstalled.name)]"
            }
        },

        //
        // Log Analytics workspace without VM Insights solution
        //

        {
            "name": "[variables('logAnalyticsWorkspaceConfig').vmInsightsNotInstalled.name]",
            "type": "Microsoft.OperationalInsights/workspaces",
            "apiVersion": "2021-12-01-preview",
            "location": "[variables('location')]",
            "properties": {
                "sku": {
                    "name": "pergb2018"
                }
            }
        },

        //
        // Virtual network
        //

        {
            "name": "[variables('virtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2023-04-01",
            "location": "[variables('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('subnetName')]",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24"
                        }
                    }
                ]
            }
        },

        //
        // Virtual machines
        //

        {
            "copy": {
                "name": "nicCopy",
                "count": "[length(variables('config'))]"
            },
            "name": "[concat(variables('config')[copyIndex()].vmName, '-nic')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2023-04-01",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('virtualNetworkName'), variables('subnetName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "copy": {
                "name": "vmCopy",
                "count": "[length(variables('config'))]"
            },
            "name": "[variables('config')[copyIndex()].vmName]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2023-03-01",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('config')[copyIndex()].vmName, '-nic'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_B2s_v2"
                },
                "storageProfile": {
                    "osDisk": {
                        "name": "[concat(variables('config')[copyIndex()].vmName, '-osdisk')]",
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "StandardSSD_LRS"
                        }
                    },
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2019-datacenter-smalldisk-g2",
                        "version": "latest"
                    }
                },
                "osProfile": {
                    "computerName": "[variables('config')[copyIndex()].computerName]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": true,
                        "enableAutomaticUpdates": true,
                        "patchSettings": {
                            "enableHotpatching": false,
                            "patchMode": "AutomaticByOS"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('config')[copyIndex()].vmName, '-nic'))]"
                        }
                    ]
                },
                "securityProfile": {
                    "securityType": "TrustedLaunch",
                    "uefiSettings": {
                        "secureBootEnabled": true,
                        "vTpmEnabled": true
                    }
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
            },
            "identity": {
                "type": "SystemAssigned"
            },
            "resources": [
                // Azure Monitor agent
                {
                    "condition": "[variables('config')[copyIndex()].shouldInstallAzureMonitorAgent]",
                    "name": "[format('{0}/AzureMonitorWindowsAgent', variables('config')[copyIndex()].vmName)]",
                    "type": "Microsoft.Compute/virtualMachines/extensions",
                    "apiVersion": "2023-03-01",
                    "location": "[variables('location')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Compute/virtualMachines', variables('config')[copyIndex()].vmName)]"
                    ],
                    "properties": {
                        "type": "AzureMonitorWindowsAgent",
                        "typeHandlerVersion": "1.0",
                        "publisher": "Microsoft.Azure.Monitor",
                        "autoUpgradeMinorVersion": true,
                        "enableAutomaticUpgrade": true
                    }
                },
                // Log Analytics agent
                {
                    "condition": "[variables('config')[copyIndex()].shouldInstallLogAnalyticsAgent]",
                    "name": "[format('{0}/MicrosoftMonitoringAgent', variables('config')[copyIndex()].vmName)]",
                    "type": "Microsoft.Compute/virtualMachines/extensions",
                    "apiVersion": "2023-03-01",
                    "location": "[variables('location')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Compute/virtualMachines', variables('config')[copyIndex()].vmName)]",
                        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('config')[copyIndex()].logAnalyticsWorkspaceName)]"
                    ],
                    "properties": {
                        "type": "MicrosoftMonitoringAgent",
                        "typeHandlerVersion": "1.0",
                        "publisher": "Microsoft.EnterpriseCloud.Monitoring",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "workspaceId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('config')[copyIndex()].logAnalyticsWorkspaceName), '2021-12-01-preview').customerId]",
                            "azureResourceId": "[resourceId('Microsoft.Compute/virtualMachines', variables('config')[copyIndex()].vmName)]",
                            "stopOnMultipleConnections": true
                        },
                        "protectedSettings": {
                            "workspaceKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', variables('config')[copyIndex()].logAnalyticsWorkspaceName), '2021-12-01-preview').primarySharedKey]"
                        }
                    }
                },
                // Dependency agent
                {
                    "condition": "[variables('config')[copyIndex()].shouldInstallDependencyAgent]",
                    "name": "[format('{0}/DependencyAgentWindows', variables('config')[copyIndex()].vmName)]",
                    "type": "Microsoft.Compute/virtualMachines/extensions",
                    "apiVersion": "2023-03-01",
                    "location": "[variables('location')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Compute/virtualMachines', variables('config')[copyIndex()].vmName)]"
                    ],
                    "properties": {
                        "type": "DependencyAgentWindows",
                        "typeHandlerVersion": "9.10",
                        "publisher": "Microsoft.Azure.Monitoring.DependencyAgent",
                        "autoUpgradeMinorVersion": true
                    }
                }
            ]
        },

        //
        // Data collection rule (VM Insights - Performance and Service Map)
        //

        {
            "name": "[variables('dataCollectionRule').vmInsightsFullEnabledWithAma.name]",
            "type": "Microsoft.Insights/dataCollectionRules",
            "apiVersion": "2021-04-01",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', variables('dataCollectionRule').vmInsightsFullEnabledWithAma.logAnalyticsWorkspaceName)]"
            ],
            "properties": {
                "dataSources": {
                    "performanceCounters": [
                        {
                            "name": "VMInsightsPerfCounters",
                            "streams": [
                                "Microsoft-InsightsMetrics"
                            ],
                            "scheduledTransferPeriod": "PT1M",
                            "samplingFrequencyInSeconds": 60,
                            "counterSpecifiers": [
                                "\\VmInsights\\DetailedMetrics"
                            ]
                        }
                    ],
                    "extensions": [
                        {
                            "name": "DependencyAgentDataSource",
                            "streams": [
                                "Microsoft-ServiceMap"
                            ],
                            "extensionName": "DependencyAgent",
                            "extensionSettings": {}
                        }
                    ]
                },
                "destinations": {
                    "logAnalytics": [
                        {
                            "name": "VMInsightsPerf-Logs-Dest",
                            "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('dataCollectionRule').vmInsightsFullEnabledWithAma.logAnalyticsWorkspaceName)]"
                        }
                    ]
                },
                "dataFlows": [
                    {
                        "streams": [
                            "Microsoft-InsightsMetrics"
                        ],
                        "destinations": [
                            "VMInsightsPerf-Logs-Dest"
                        ]
                    },
                    {
                        "streams": [
                            "Microsoft-ServiceMap"
                        ],
                        "destinations": [
                            "VMInsightsPerf-Logs-Dest"
                        ]
                    }
                ]
            }
        },
        {
            "name": "[concat(variables('dataCollectionRule').vmInsightsFullEnabledWithAma.name, '-association')]",
            "type": "Microsoft.Insights/dataCollectionRuleAssociations",
            "apiVersion": "2021-09-01-preview",
            "scope": "[concat('Microsoft.Compute/virtualMachines/', variables('dataCollectionRule').vmInsightsFullEnabledWithAma.vmName)]",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines/extensions', variables('dataCollectionRule').vmInsightsFullEnabledWithAma.vmName, 'AzureMonitorWindowsAgent')]",
                "[resourceId('Microsoft.Compute/virtualMachines/extensions', variables('dataCollectionRule').vmInsightsFullEnabledWithAma.vmName, 'DependencyAgentWindows')]",
                "[resourceId('Microsoft.Insights/dataCollectionRules', variables('dataCollectionRule').vmInsightsFullEnabledWithAma.name)]"
            ],
            "properties": {
                "dataCollectionRuleId": "[resourceId('Microsoft.Insights/dataCollectionRules', variables('dataCollectionRule').vmInsightsFullEnabledWithAma.name)]"
            }
        },

        //
        // VM Insights performance only enabled with Azure Monitor agent
        //

        {
            "name": "[variables('dataCollectionRule').vmInsightsPerfOnlyEnabledWithAma.name]",
            "type": "Microsoft.Insights/dataCollectionRules",
            "apiVersion": "2021-04-01",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', variables('dataCollectionRule').vmInsightsPerfOnlyEnabledWithAma.logAnalyticsWorkspaceName)]"
            ],
            "properties": {
                "dataSources": {
                    "performanceCounters": [
                        {
                            "name": "VMInsightsPerfCounters",
                            "streams": [
                                "Microsoft-InsightsMetrics"
                            ],
                            "scheduledTransferPeriod": "PT1M",
                            "samplingFrequencyInSeconds": 60,
                            "counterSpecifiers": [
                                "\\VmInsights\\DetailedMetrics"
                            ]
                        }
                    ]
                },
                "destinations": {
                    "logAnalytics": [
                        {
                            "name": "VMInsightsPerf-Logs-Dest",
                            "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('dataCollectionRule').vmInsightsPerfOnlyEnabledWithAma.logAnalyticsWorkspaceName)]"
                        }
                    ]
                },
                "dataFlows": [
                    {
                        "streams": [
                            "Microsoft-InsightsMetrics"
                        ],
                        "destinations": [
                            "VMInsightsPerf-Logs-Dest"
                        ]
                    }
                ]
            }
        },
        {
            "name": "[concat(variables('dataCollectionRule').vmInsightsPerfOnlyEnabledWithAma.name, '-association')]",
            "type": "Microsoft.Insights/dataCollectionRuleAssociations",
            "apiVersion": "2021-09-01-preview",
            "scope": "[concat('Microsoft.Compute/virtualMachines/', variables('dataCollectionRule').vmInsightsPerfOnlyEnabledWithAma.vmName)]",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines/extensions', variables('dataCollectionRule').vmInsightsPerfOnlyEnabledWithAma.vmName, 'AzureMonitorWindowsAgent')]",
                "[resourceId('Microsoft.Insights/dataCollectionRules', variables('dataCollectionRule').vmInsightsPerfOnlyEnabledWithAma.name)]"
            ],
            "properties": {
                "dataCollectionRuleId": "[resourceId('Microsoft.Insights/dataCollectionRules', variables('dataCollectionRule').vmInsightsPerfOnlyEnabledWithAma.name)]"
            }
        },

        //
        // VM Insights disabled with Azure Monitor agent
        //

        {
            "name": "[variables('dataCollectionRule').vmInsightsDisabledWithAma.name]",
            "type": "Microsoft.Insights/dataCollectionRules",
            "apiVersion": "2021-04-01",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', variables('dataCollectionRule').vmInsightsDisabledWithAma.logAnalyticsWorkspaceName)]"
            ],
            "properties": {
                "dataSources": {
                    "windowsEventLogs": [
                        {
                            "name": "eventLogsDataSource",
                            "streams": [
                                "Microsoft-Event"
                            ],
                            "scheduledTransferPeriod": "PT5M",
                            "xPathQueries": [
                                "System!*[System[(Level=1)]]"
                            ]
                        }
                    ]
                },
                "dataFlows": [
                    {
                        "streams": [
                            "Microsoft-Event"
                        ],
                        "destinations": [
                            "la-data-destination"
                        ],
                        "transformKql": "source",
                        "outputStream": "Microsoft-Event"
                    }
                ],
                "destinations": {
                    "logAnalytics": [
                        {
                            "name": "la-data-destination",
                            "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('dataCollectionRule').vmInsightsDisabledWithAma.logAnalyticsWorkspaceName)]",
                            "workspaceId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('dataCollectionRule').vmInsightsDisabledWithAma.logAnalyticsWorkspaceName), '2021-12-01-preview').customerId]"
                        }
                    ]
                }
            }
        },
        {
            "name": "[concat(variables('dataCollectionRule').vmInsightsDisabledWithAma.name, '-association')]",
            "type": "Microsoft.Insights/dataCollectionRuleAssociations",
            "apiVersion": "2021-09-01-preview",
            "scope": "[concat('Microsoft.Compute/virtualMachines/', variables('dataCollectionRule').vmInsightsDisabledWithAma.vmName)]",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines/extensions', variables('dataCollectionRule').vmInsightsDisabledWithAma.vmName, 'AzureMonitorWindowsAgent')]",
                "[resourceId('Microsoft.Insights/dataCollectionRules', variables('dataCollectionRule').vmInsightsDisabledWithAma.name)]"
            ],
            "properties": {
                "dataCollectionRuleId": "[resourceId('Microsoft.Insights/dataCollectionRules', variables('dataCollectionRule').vmInsightsDisabledWithAma.name)]"
            }
        }
    ]
}
